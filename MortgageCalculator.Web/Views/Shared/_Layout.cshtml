<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Simple Mortgage Calculator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-resource.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @Scripts.Render("~/jquery/MortgageScripts");
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/img/cba-logo.png" />
                @Html.ActionLink("Simple Mortgage Calculator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
            <div class="container">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="#!Home"> Mortgage Home </a></li>
                        <li><a href="#!MortgageCals"> Mortgage Calculator</a></li>
                    </ul>
                </div>
            </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="container body-content" ng-app="MortgageCalsApp">
        @RenderBody()
        <div ng-view></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Commonwealth Bank of Australia</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
